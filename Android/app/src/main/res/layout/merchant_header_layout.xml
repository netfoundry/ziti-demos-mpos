<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main_layout"
    xmlns:fontify="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.nf.flash.fontify.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/merchantName_tv"
        android:layout_centerHorizontal="true"
        android:textColor="@color/dark_gray"
        android:textSize="23sp"
        android:singleLine="true"
        android:text="Indian Merchant"
        android:ellipsize="end"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        fontify:font_name="@string/app_font_demi"/>

   <com.nf.flash.fontify.TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:text="Sale"
       android:textColor="@color/dark_gray"
       android:textSize="23sp"
       android:layout_below="@+id/merchantName_tv"
       android:drawableLeft="@drawable/flash_sale_icon"
       android:id="@+id/module_tv"
       android:drawablePadding="5dp"
       android:layout_marginLeft="8dp"
       android:gravity="center"
       android:singleLine="true"
       fontify:font_name="@string/app_font_demi"
       />

</RelativeLayout>
