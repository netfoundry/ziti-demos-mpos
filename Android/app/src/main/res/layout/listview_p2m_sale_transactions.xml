<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fontify="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_display_view_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/padding_gap_small"
    android:paddingTop="@dimen/padding_gap_small">

    <RelativeLayout
        android:id="@+id/date_time_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <com.nf.flash.fontify.TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="08/05/2017"
            android:textSize="@dimen/text_size"
            fontify:font_name="@string/app_font" />

        <com.nf.flash.fontify.TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/date"
            android:layout_below="@id/date"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="10:23:41"
            android:textSize="@dimen/text_size"
            fontify:font_name="@string/app_font" />

    </RelativeLayout>

    <com.nf.flash.fontify.TextView
        android:id="@+id/recipient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="left"
        android:maxLines="2"
        android:text="100000000"
        android:textSize="@dimen/text_size"
        fontify:font_name="@string/app_font" />

    <com.nf.flash.fontify.TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:text="120.23"
        android:textSize="@dimen/text_size"
        fontify:font_name="@string/app_font" />

    <com.nf.flash.fontify.TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="left"
        android:singleLine="true"
        android:text="Approved"
        android:textSize="@dimen/text_size"
        fontify:font_name="@string/app_font" />

</LinearLayout>